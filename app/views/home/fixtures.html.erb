<section id="title" class="emerald custom-emerald" style="margin-top:90px;" >
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="color:#2C3446;">Premier League Fixtures</h1>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                </ul>
            </div>
        </div>
    </div>
</section>

<br>

<div class="container" style="min-height:650px;">

	<div class="table-responsive">
		<table class="table table-bordered back-grey">
		  <% @fixtures.each do |a| %>
		  	<% if a.date != "" %>
			  	<thead>
			  		<tr style="background-color:#2C3446;">
			  			<td><b><%= a.date %></b></td>
			  			<td colspan="2"></td>
			  		</tr>
			  	</thead>
			  <% end %>
			  <% if a.time and a.teams != ""%>
			  	<tbody>
					  <tr style="color:white;">
					  	<td class="text-center"><em><%= a.time %></em></td>
					  	<td class="text-center"><b><%= a.teams %></b></td>
					  	<td class="text-center"><em><%= a.location %></em></td>
					  </tr>
					</tbody>
				<% end %>
		  <% end %>
		</table>
	</div>

</div>