<section id="title" class="emerald custom-emerald" style="margin-top:90px;" >
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="color:#2C3446;">Premier League Table</h1>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                	<% if current_user %>
                		<li><a href="/home" style="color:#428bca;">Home</a></li>
                	<% else %>
                		<li><a href="/"  style="color:#428bca;">Home</a></li>
                	<% end %>
                	<li>Table</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<br>

<div class="container" style="min-height:650px;">
	<div class="table-responsive">
		<table class="table table-bordered back-grey">
		  <thead>
		  	<tr style="background-color:black; color:white;">
		  		<td>Position</td>
		  		<td>Team</td>
		  		<td>Played</td>
		  		<td>Won</td>
		  		<td>Drawn</td>
		  		<td>Lost</td>
		  		<td>GF</td>
		  		<td>GA</td>
		  		<td>GD</td>
		  		<td>Points</td>
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @epldata.each do |a| %>
		  		<% if @a < 4 %>
		  			<% if a.team == "Man Utd"%>
		  				<tr>
		  			<% else %>
			  			<tr>
			  		<% end %>
			  			<td><%= a.position %></td>
			  			<td><%= a.team %></td>
			  			<td><%= a.played %></td>
			  			<td><%= a.won %></td>
			  			<td><%= a.drawn %></td>
			  			<td><%= a.lost %></td>
			  			<td><%= a.goalfor %></td>
			  			<td><%= a.goalagainst %></td>
			  			<td><%= a.goaldifference %></td>
			  			<td><%= a.points %></td>
			  		</tr>
			  		<% @a = @a+1 %>
			  		<% @count = @count+1 %>
			  	<% elsif @count == 18 %>
			  		<% if a.team == "Man Utd"%>
		  				<tr>
		  			<% else %>
			  			<tr>
			  		<% end %>
			  			<td><%= a.position %></td>
			  			<td><%= a.team %></td>
			  			<td><%= a.played %></td>
			  			<td><%= a.won %></td>
			  			<td><%= a.drawn %></td>
			  			<td><%= a.lost %></td>
			  			<td><%= a.goalfor %></td>
			  			<td><%= a.goalagainst %></td>
			  			<td><%= a.goaldifference %></td>
			  			<td><%= a.points %></td>
			  		</tr>
			  	<% else %>
			  	<% if a.team == "Man Utd"%>
		  				<tr>
		  			<% else %>
			  			<tr>
			  		<% end %>
			  			<td><%= a.position %></td>
			  			<td><%= a.team %></td>
			  			<td><%= a.played %></td>
			  			<td><%= a.won %></td>
			  			<td><%= a.drawn %></td>
			  			<td><%= a.lost %></td>
			  			<td><%= a.goalfor %></td>
			  			<td><%= a.goalagainst %></td>
			  			<td><%= a.goaldifference %></td>
			  			<td><%= a.points %></td>
			  			<% @count = @count+1 %>
			  		</tr>
			  	<% end %>
		  	<% end %>
		  </tbody>
		</table>
	</div>
	</div>