<section id="title" class="emerald custom-emerald" style="margin-top:90px;" >
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="color:#2C3446;">Bet History</h1>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                	<li><a href="/home" style="color:#428bca;">Home</a></li>
                	<li>Bet History</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<br>

<div class="container" style="min-height:650px;">


	<% unless current_user.bets.empty? %>

		<div class="row">
			<div class="col-xs-6 col-md-1">
			</div>
			<div class="col-xs-6 col-md-9">
				<table class="table table-bordered">
					<thead>
						<tr style="background-color:black;">
							<td>Sl No.</td>
							<td>Match</td>
							<td>Placed Coins</td>
							<td>Placed For</td>
							<td>Coins won</td>
						</tr>
					</thead>

					<tbody>
						<% @bets.each do |bet| %>
							<tr>
								<td><%= @bets_all.index(bet)+1 %></td>
							  <td><em><%= team_icon(bet.bet_fixture.home_team) %>&nbsp<%= bet.bet_fixture.home_team %> <span style="color:black">&nbsp vs &nbsp </span> 
							  		<%= team_icon(bet.bet_fixture.away_team) %>&nbsp<%= bet.bet_fixture.away_team %></em></td>
							  <td class="coin_text box"><%= bet.coins %><%= image_tag "coins.png" , :width => "25px", :height => "25px" %></td>
							  <td><strong><%= team_icon(bet_history_team(bet)) %>&nbsp<%= bet_history_team(bet) %></strong></td>
							  <td class="coin_text box"><%= bet.coins_won || 0 %><%= image_tag "coins.png" , :width => "25px", :height => "25px" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>

	<% else %>

		<h3 align = "center" style = "font-weight:500;" >No current Bets</h3>

	<% end %>

	<% unless @bets.empty?%>
		<div align = center class="row">
		    <div><%= paginate @bets, :outer_window => 1 %></div>
		</div>
	<% end %>
	</div>

