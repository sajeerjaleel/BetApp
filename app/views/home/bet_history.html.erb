<div align = center class= "thumbnail">
	<h3 align = "center" style = "color:black;font-weight:700;" >Bet History</h3><br>
</div>
<div class= "thumbnail">


	<% unless current_user.bets.empty? %>

		<div class="row">
			<div class="col-xs-6 col-md-2">
			</div>
			<div class="col-xs-6 col-md-8">
				<table class="table table-striped">
					<thead>
						<tr>
							<td style="font-size:20px;">Sl No.</td>
							<td style="font-size:20px;">Match</td>
							<td style="font-size:20px;">Placed Coins</td>
							<td style="font-size:20px;">Coins won</td>
						</tr>
					</thead>

					<tbody>
						<% sl = 0%>
						<% current_user.bets.each do |bet| %>
							<tr>
								<td><%= sl = sl+1 %></td>
							  <td><%= bet.bet_fixture.home_team %> vs 
							  		<%= bet.bet_fixture.away_team %></td>
							  <td class="coin_text"><%= bet.coins %><%= image_tag "coins.png" , :width => "30px", :height => "30px" %></td>
							  <td class="coin_text"><%= bet.coins_won || 0 %><%= image_tag "coins.png" , :width => "30px", :height => "30px" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>

	<% else %>

		<h3 align = "center" style = "font-weight:500;" >No current Bets</h3>

	<% end %>
	</div>