<div class="container container-custom">

	<h2 style="color:black;">Forgot your password?</h2>

	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>

				  <div><%= f.label :email %><br />
				  <%= f.email_field :email, autofocus: true, :class => "form-control", :id =>"exampleInputEmail1", :placeholder => "Enter email" %></div><br>

				  <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-large" %></div>
				<% end %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-8">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>