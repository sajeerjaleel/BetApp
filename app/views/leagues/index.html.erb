<div class="container container-custom" style="min-height:650px;">
<div class="row">
  <div class="col-md-8">
  </div>
  <div class="col-md-4">
    <%= form_tag leagues_path, :method => 'get'  do %>
      <p>
        <%= text_field_tag :search, params[:search], placeholder: "League Name" %>
        <%= submit_tag "search leaues", :name => nil%>
      </p>
    <% end %>
  </div>  
</div>
<div class="row">
  <div class="col-md-2">
    <ul class="nav nav-pills">
      <li><%= link_to "Create League", new_league_path%></li>
      <li><%= admin_prevs(current_user) %></li>
      <li><%= (link_to "My Leagues", my_leagues_path) unless current_user.leagues.count == 0%></li>
    </ul>
  </div>
  <div class = "back-grey col-md-8">
  	<h1 style="color: black" align= "center"> All Leagues
    </h1>
  </div>
</div>
<div class="row">
  <div class = "col-md-2">
  </div>
  <% unless @leagues.empty? %>
    <div align = center class = "back-grey col-md-8">
    <table class="table table-bordered index" style="max-width:760px">
      <tr>
        <td>Sl.no</td>
        <td>Name</td> 
        <td>Users</td>
        <td>Coins</td>
      </tr>
      <% @leagues.each do |league|%>
      <tr>
        <td><%= (@leagues.index(league))+1%></td>
        <td><%= link_to league.name, league_path(league.id) %></td> 
        <td><%= league.users.count %></td>
        <td><%= league.users.sum(:coins) %></td>
      </tr>
      <% end%>
    </table>
    </div>
  <% else %>
    <div class = "col-md-8">
      <h3 align="center" style="color: black"> No Leagues Found...</h3>  
    </div>  
  <% end %>  
</div> 
<% unless @leagues.empty? %>
	<div align = center class="row">
	    <div><%= paginate @leagues, :outer_window => 1 %></div>
	</div>
<% end %>
</div>
