<section id="title" class="emerald" style="margin-top:90px;">
  <div class="container">
      <div class="row">
          <div class="col-sm-6">
              <h1 style="color:#2C3446;"><%= @league.name %></h1><br>
          </div>
          <div class="col-sm-6">
              <ul class="breadcrumb pull-right">
                  <li><%= link_to "Leagues", leagues_path, style: "color:#428bca;" %></li>
                  <li><%= link_to "My Leagues", my_leagues_path, style: "color:#428bca;" %></li>
                  <% unless @league.admin_id == current_user.id %>
                  	<li><%= join_league(current_user) %></li>
                  <% end %>
                  <% if @league.admin_id == current_user.id %>
                  	<li><%= link_to "Delete", delete_league_path(@league.id), class: "red remove", style: "color:red;font-weight:700;" %></li>
                  <% end %>
              </ul>
          </div>
      </div>
  </div>

  <section id="services" >
	      <div class="row">
	          <div class="col-md-4 col-sm-6">
	              <div class="media">
	                  <div class="pull-left">
	                      <i class="icon-twitter icon-md"></i>
	                  </div>
	                  <div class="media-body">
	                      <h3 class="media-heading">Twitter Marketing</h3>
	                      <p><a href = "http://twitter.com/share?url=http://localhost:3000/join_league/<%= @league.url %>&text=Join my League..">Share</a></p>
	                  </div>
	              </div>
	          </div><!--/.col-md-4-->
	          <div class="col-md-4 col-sm-6">
	              <div class="media">
	                  <div class="pull-left">
	                      <i class="icon-facebook icon-md"></i>
	                  </div>
	                  <div class="media-body">
	                      <h3 class="media-heading">Facebook Marketing</h3>
	                      <p><a href="http://www.facebook.com/sharer.php?u=localhost:3000/join_league/<%= @league.url %>">Share</a></p>
	                  </div>
	              </div>
	          </div><!--/.col-md-4-->
	          <div class="col-md-4 col-sm-6">
	              <div class="media">
	                  <div class="pull-left">
	                      <i class="icon-google-plus icon-md"></i>
	                  </div>
	                  <div class="media-body">
	                      <h3 class="media-heading">Google Plus Marketing</h3>
	                      <p><a href = "https://plusone.google.com/_/+1/confirm?hl=en&url=http://localhost:3000/join_league/<%= @league.url %>">Share</a></p>
	                  </div>
	              </div>
	          </div><!--/.col-md-4-->
	      </div>
	      <em><p align="center">Use this link for inviting users <strong>"localhost:3000/join_league/<%= @league.url if @league.url%>"</strong></p></em>
	</section><!--/#services-->

    </section>

		  <% if notice %>
		  	<p class="alert alert-success alert-dismissible" role="alert" >
		    	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		    	<%= notice %>
		  	</p>
		  <% end %>
		  <% if alert %>
				<p class="alert alert-danger alert-dismissible" role="alert" ><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><%= alert %></p>
			<% end %>


<div class="container container-custom" style="min-height:650px;">
<% unless @toppers.empty?%>
<div class="row">
	<div class="col-md-2">
	</div>
	<div align = center class = "back-grey col-md-8">
	<table class="table table-bordered" style="max-width:760px">
		<tr>
		  <td>Position</td>
		  <td>Nick Name</td> 
		  <td>Team</td>
		  <td>Coins</td>
		  <% if @league.admin_id == current_user.id %>
		  	<td>Remove User</td>
		  <% end %>
		</tr>
		<% @toppers.each do |topper|%>
		<tr>
		  <td><%= (@toppers.index(topper))+1%></td>
		  <td><%= topper.full_name %></td> 
		  <td><%= topper.fav_team %></td>
		  <td class="coin_text box"><%= topper.coins %><%= image_tag "coins.png" , :width => "25px", :height => "25px" %></td>
		  <% if @league.admin_id == current_user.id %>
		  	<td><%= remove_user(topper)%></td>
		  <% end %>
		</tr>
		<% end%>
	</table>
	</div>
</div>
<% end %>

<% if @league.admin_id == current_user.id %>

	<legend><h3  style= "color:black"> Join requests</h3></legend>

	<div class="row">
		<div class="col-md-2">
		</div>

		<% @count = 0 %>
		<% unless @requests.empty? %>	
			<% @requests.each do |req| %>
			<table class="table table-bordered" style="max-width:760px">
				<tr>
				  <td>Sl no.</td>
				  <td>User</td> 
				  <td>Approve</td>
				  <td>Delete</td>
				</tr>
				<tr>
				  <td><%= @count += 1  %></td>
				  <td><%= req.user.full_name %></td> 
				  <td><%= link_to "", accept_request_path(req.id),class: "glyphicon glyphicon-ok", :style => "color:green;"%></td>
				  <td><%= link_to "", delete_request_path(req.id), class: "glyphicon glyphicon-trash", :style => "color:red;"%></td>
				</tr>
			</table>
			<% end %>
		<% else %>
			<p> No Requests</p>
		<% end %>
	</div>

<% end %>
