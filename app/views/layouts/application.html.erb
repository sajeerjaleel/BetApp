<!DOCTYPE html>
<html>

	<head>
	  <title>BetApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>

	<% unless params[:controller] == "home" and  params[:action] == "index" %> 
		<body>

			<header id="header" class="header"  data-offset-top="10">
		    <nav class="navbar navbar-default" role="navigation">		
					<div class="navbar-header">
	          <ul  class="nav navbar-nav">
	            <li>
	            	<% if current_user %>
	            		<% if current_user.has_role? :admin %>
	            			<a href="/admins">Home</a>
	            		<% else %>
	            			<a href="/home">Home</a>
	            		<% end %>
	            	<% else %>
	              	<a href="#">Home</a>
	              <% end %>
	            </li>

	            <li>
	              <a href="/table">Table</a>
	            </li>

	            <li>
	             	<a href="/fixtures">Fixtures</a>
	            </li>

	            <li>
	              <a href="/results">Results</a>
	            </li>

	            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, title: "Logout" %></li>

	          </ul>
		        	<!-- /.nav -->

		        <% if current_user %>
		          <div style="margin-left:1000px;margin-top:5px;">
		            <%= display_image(current_user) %>
		             <%= current_user.nick_name %>
		          </div>
	          <% end %>

		      </div>

		    </nav>
		      <!-- /.navbar -->
		  </header>

	    <div class="container">

		    <% if notice %>
		    	<p class="alert alert-success alert-dismissible" role="alert" >
			    	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			    	<%= notice %>
		    	</p>
		    <% end %>
		    <% if alert %>
					<p class="alert alert-danger alert-dismissible" role="alert" ><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><%= alert %></p>
				<% end %>

				<% if current_user %>
					<div class="row">
						<div class="col-xs-2 col-md-10">
						</div>
						<div class="col-xs-4 col-md-2">
							<p class="gold" style="float:right;"><%= image_tag "coins.png" , :width => "30px", :height => "30px" %>
							<%= current_user.coins %></p>
						</div>
					</div>
				<% end %>

				<%= yield %>

			</div>

		</body>

	<% else %>

		<body style = " background-image:url('epl.jpg');background-size: 100%;
    background-repeat: no-repeat; ">

	    <div class="container">
				<%= yield %>
			</div>
		</body>

	<% end %>

</html>
