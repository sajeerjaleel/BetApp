<!DOCTYPE html>
<html>

	<head>
	  <title>BetApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag "chart_layout", 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>

	<% if current_user %> 
		<body>

			    <header class="navbar navbar-inverse navbar-fixed-top wet-asphalt" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home"><%= image_tag "logo.png" , height: "60", width: "150"%></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
				            	<% if current_user %>
				            		<% if current_user.has_role? :admin %>
				            			<a href="/admins">Home</a>
				            		<% else %>
				            			<a href="/home">Home</a>
				            		<% end %>
				            	<% else %>
				              	<a href="/">Home</a>
				              <% end %>
				            </li>
                    <li><a href="/table">Table</a></li>
                    <li><a href="/fixtures">Fixtures</a></li>
                    <li><a href="/results">Results</a></li>
	            <%if current_user %>

	            <li>
	              <%= link_to "Bet Results",  bet_results_path%>
	            </li>
	            <li>
	            <%= link_to "Bet History", bet_history_path%>
	            </li>
	            
	            <li><%= link_to "Leagues", leagues_path %></li>

	            <li class="dropdown">
	            	<%#= display_image(current_user) %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span><i class="icon-angle-down"></i></a>
                <ul class="dropdown-menu">
                    <li><%= link_to "Edit Profile",  edit_user_path(current_user)%></li>
                    <li class="divider"></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete, title: "Logout" %></li>
                </ul>
              </li>

              <li class="box">
              	<p class="gold"><%= image_tag "coins.png" , :width => "30px", :height => "30px" %>
							<%= current_user.coins %></p>
              </li>


	          </ul>
		        	<!-- /.nav -->

	          <% end %>
                </ul>
            </div>
        </div>
    </header><!--/header-->




				<%= yield %>


		  <footer id="footer" class="midnight-blue" style="bottom:0;width:100%;">
        <div class="container">
            <div class="row">
                 <div class="col-sm-6">
                    &copy; 2014 <a target="_blank" href="http://sheltered-beach-8162.herokuapp.com">Bet380</a>. All Rights Reserved.
                </div>
            </div>
        </div>
   		</footer><!--/#footer-->


		</body>

	<% else %>

		<body>
	    <div class="container">
				<%= yield %>
			</div>
		</body>

	<% end %>

</html>
